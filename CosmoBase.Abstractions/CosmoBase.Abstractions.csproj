<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>CosmoBase.Abstractions</PackageId>
        <Version>1.0.0</Version>
        <Authors>tziazas</Authors>
        <Description>CosmoBase abstractions: DTOs, interfaces, enums.</Description>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <RepositoryUrl>https://github.com/tziazas/CosmoBase.git</RepositoryUrl>
    </PropertyGroup>

    <!-- Enable XML doc generation in the .csproj so the comments are compiled into a .xml file alongside the DLL -->
    <PropertyGroup>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <NoWarn>$(NoWarn);1591</NoWarn>  <!-- suppress “missing docs” if you need -->
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="GitVersion.MsBuild" Version="6.3.0">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

</Project>
